<div class="admin-container">
    <h1>User Management</h1>
    
    <div class="users-list">
        <% if (users && users.length > 0) { %>
            <table class="users-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Join Date</th>
                        <th>Last Login</th>
                        <th>Roles</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.join_date ? new Date(user.join_date).toLocaleDateString() : 'N/A' %></td>
                            <td><%= user.last_login ? new Date(user.last_login).toLocaleString() : 'Never' %></td>
                            <td><%= user.roles || 'No roles' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No users found</p>
        <% } %>
    </div>
</div>